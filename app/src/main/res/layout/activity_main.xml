<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="150dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtview1"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Chỉ Số Đầu:"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/chisodau"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center"
            android:inputType="number"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txtview2"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Chỉ Số Cuối:"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/chisocuoi"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center"
            android:inputType="number"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtview3"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Số KW sử Dụng:"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/SoKwSuDung"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:editable="false"
            android:layout_gravity="right|center"
            android:inputType="number"
            android:textSize="18dp"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtview4"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Thành Tiền:"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/TongTien"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:editable="false"
            android:layout_gravity="right|center"
            android:inputType="number"
            android:textSize="18dp"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtview5"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Thuế VAT:"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ThueVAT"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:editable="false"
            android:layout_gravity="right|center"
            android:inputType="number"
            android:textSize="18dp"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Tổng Tiền:"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/TongTienSauThue"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:editable="false"
            android:layout_gravity="right|center"
            android:inputType="number"
            android:textSize="18dp"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="TÍNH"
            android:id="@+id/BtnTinh" />
        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="THOÁT"
            android:id="@+id/BtnThoat" />
    </LinearLayout>
</LinearLayout>